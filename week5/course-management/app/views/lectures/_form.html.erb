<%= form_for(@lecture) do |f| %>
  <% if @lecture.errors.any? %>
    <h2>You have some errors</h2>
    <ul>
      <% @lecture.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
<%  end %>

  <%= f.label :name %> <br>
  <%= f.text_area :name %><br>

  <%= f.label :body %> <br>
  <%= f.text_area :body %>
  <br>
  <%= f.submit %>
<% end %>

